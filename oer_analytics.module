/** Helper Functions **/

function today() {
  $today = getdate();
  $mon = $today["mon"];
  $day = $today["mday"];
  $yr = $today["year"];
  if ($mon < 10) {
    $mon = "0".$mon;
  }
  if ($day < 10) {
    $day = "0".$day;
  }
  $curr_date = $yr."-".$mon."-".$day;
  return $curr_date;
} 

