function landingpg_path($fullpath) {
  $fullpath = str_replace("/materials", "", $fullpath);
  $fullpath = str_replace("/highlights", "", $fullpath);
  $fullpath = str_replace("/sessions", "", $fullpath);
  return $fullpath;
}


